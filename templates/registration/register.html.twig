<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
<head>
	<title>
		{% block title %}Incription
		{% endblock %}
	</title>
</head>

{% block body %}
	<section class="vh-100  bg-image" style="background-image:url('https://mdbcdn.b-cdn.net/img/Photos/Others/images/76.webp');height: 100vh; ">
		<div style="margin: auto;">
			<div class="  rounded-lg p-6">
				<div class="container py-1 h-50">
					<div class="row justify-content-center align-items-center h-50">
						<div class="col-12 col-lg-9 col-xl-6">
							<div class="card shadow-2-strong " style="border-radius: 15px; width:35rem;">
								<div class="card-body p-4 p-md-5">
									<h3 class="font-weight-light text-center py-0">Inscription</h3>
									{{ form_start(registrationForm) }}
									<div class="row">
										<div class="col-12 col-md-6 mb-0">
											{{ form_row(registrationForm.nom) }}
										</div>
										<div class="col-12 col-md-6 mb-0">
											{{ form_row(registrationForm.prenom) }}
										</div>
									</div>
									<div class="row">
										<div class="col-12 col-md-6 mb-0">
											{{ form_row(registrationForm.email,{'row_attr':{'class':"w-100"}}) }}
										</div>
									</div>
									<div class="row">
										<div class="col-12 col-md-6 mb-0">
											{{ form_row(registrationForm.password.first) }}
										</div>
										<div class="col-12 col-md-6 mb-0">
											{{ form_row(registrationForm.password.second) }}
										</div>
									</div>
									<div class="row">
										<div class="col-12 col-md-6 mb-0">
											{{ form_row(registrationForm.numeroTelephone) }}
										</div>
										<div class="col-12 col-md-6 mb-0">
											{{ form_row(registrationForm.adresse) }}
										</div>
									</div>
									{{ form_row(registrationForm.agreeTerms) }}
									<div class="text-center py-0">
										<div>
											<button type="submit" class="btn btn-success">S'inscrire</button>
											<p class="text-center text-muted  mb-1">Vous avez dej√† un compte ?
												<a href="{{path('app_login')}}" class="text-primary fw-bold">Se connecter</a>
											</p>
										</div>
									</div>
								</div>
								{{ form_end(registrationForm) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
