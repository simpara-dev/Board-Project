<div class="container py-5 h-100">
	<div class="row justify-content-center align-items-center h-100">
		<div class="col-12 col-lg-9 col-xl-6">
			<div class="card shadow-2-strong " style="border-radius: 15px; width:32rem">
				<div class="card-body p-4 p-md-5">
					<h4 class="text-center mb-5">Formulaire d'inscription</h4>
					{{ form_start(form) }}
					<div class="row">
						<div class="col-12 col-md-6 mb-4">
							{{ form_row(form.nom) }}
						</div>
						<div class="col-12 col-md-6 mb-4">
							{{ form_row(form.prenom) }}
						</div>
					</div>
					<!-- Email input -->
					<div class="col-12 col-md-12 mb-4">
						{{ form_row(form.email) }}
					</div>
					<div class="row">
						<div class="col-12 col-md-6 mb-4">
							{{ form_row(form.password.first) }}
						</div>
						<div class="col-12 col-md-6 mb-4">
							{{ form_row(form.password.second) }}
						</div>
					</div>

					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-secondary btn-block btn-lg gradient-custom-4 text-body" formnovalidate>
							<span class="text-white">Ajouter</span>
						</button>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
