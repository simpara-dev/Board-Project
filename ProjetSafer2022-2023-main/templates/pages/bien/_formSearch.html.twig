<!-- Search Section Begin -->
<section class="search-section spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-7">
				<div class="section-title">
					<h4>Réchercher un bien</h4>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-ld-9">
				{{form_start(formSearch)}}
				<div class="room-size-range-wrap sm-width">
					<div class="price-text">
						<div class="col-md-6">
							{{form_row(formSearch.minSurface)}}
						</div>
					</div>
				</div>
				<div class="price-range-wrap sm-width">
					<div class="price-text">
						<div class="col-md-6">
							{{form_row(formSearch.maxPrice)}}
						</div>
					</div>
				</div>
				<div class="col-md-6">
					{{form_rest(formSearch)}}
				</div>
				<div class="mt-2 ml-3">
					<button class="btn sm-width btn-success">Réchercher</button>
				</div>
				{{form_end(formSearch)}}
			</div>
		</div>
	</div>
</section>
<!-- Search Section End -->
