<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<head>
	<title>
		{% block title %}Login
		{% endblock %}
	</title>
</head>
{% block body %}
	<section class="vh-100  bg-image" style="background-image:url('https://mdbcdn.b-cdn.net/img/Photos/Others/images/76.webp');height: 100vh; ">
		<div style="margin: auto;">
			<div class="  rounded-lg p-5">
				<div class="container py-1 h-60">
					<div class="row justify-content-center align-items-center h-50">
						<div class="col-12 col-lg-9 col-xl-6">
							<div class="card shadow-2-strong " style="border-radius: 15px; width:35rem;">
								<div class="card-body p-4 p-md-5">
									<h3 class="font-weight-light"></h3>
									<form method="post">
										{% if error %}
											<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}

										{% if app.user %}
											<div class="mb-3">
												You are logged in as
												{{ app.user.username }},
												<a href="{{ path('app_logout') }}">Logout</a>
											</div>
										{% endif %}

										<div class="col-sm-12">
											<div class="text-center">
												<h3 class="fw-bold my-2 ">Veuillez vous connecter</h3>
											</div>
											<label for="inputEmail">Email</label>
											<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
											<label for="inputPassword">Password</label>
											<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
										</div>
										<input
										type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
										{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
										<center>
											<div class="text-center py-3">
												<p class="mb-0">
													<a href="{{path('app_forgot_password_request')}}" class="text-primary fw-bold">Mot de passe oubli√©?</a>
												</p>
											</div>
											<button class="btn btn-lg btn-success mt-2" type="submit">
												<span class="text-white">
													S'authentifier
												</span>
											</button>
										</center>
									</div>
								</form>
								<div class="text-center py-1">
									<div>
										<p class="text-center text-muted mt-3 mb-0">Vous n'avez pas de compte ?
											<a href="{{path('app_porteur_register')}}" class="text-primary fw-bold">S'inscrire</a>
										</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
