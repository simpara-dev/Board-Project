{# templates/emails/signup.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta content="width=device-width, initial-scale=1.0" name="viewport">
		<meta content="" name="keywords">
		<meta content="" name="description">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<!-- Met les ecriture en gras  -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.css" rel="stylesheet"/>
	</head>
	<body>
		<div class="noprint">
			<div class="row">
				<div class="col"><input id="impression" name="impression" type="submit" onclick="imprimer_page()" value="Imprimer" class="btn btn-primary"/>
				</div>
			</div>
		</div>
		<div class="blue">
			<div class="container-xxl" style="background-color : AliceBlue">

				<div class="row mt-2">
					<div class="col">
						<div class="row">Safer Société immobilière</div>
						<div class="row">Rennes(35)</div>
						<div class="row">safer.support@gmail.com</div>
						<div class="row">58 67 90 68</div>
					</div>
				</div>
				<div class="row">
					Les différents biens de la categorie
					{{ categorie.designation }}
				</div>
				<table class="table mt-2">
					<thead class="table-primary">
						<th>Référence</th>
						<th>Intitulé</th>
						<th>Surface</th>
						<th>Prix</th>
						<th>Description</th>
						<th>Détails</th>
					</thead>
					<tbody>
						{% for bien in categorie.biens %}
							<tr>
								<td>
									{{ bien.reference}}
								</td>
								<td>
									{{bien.titre}}
								</td>

								<td>{{bien.surface}}</td>
								<td>{{bien.prix}}</td>
								<td>
									{{ bien.description | nl2br }}
								</td>
								<td>
									<a href="{{url('bien_show',{id:bien.id})}}">aller sur le site</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</body>
</html>
