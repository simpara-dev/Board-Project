<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<head>
	<title>
		{% block title %}Réinitialisez votre mot de passe
		{% endblock %}
	</title>
</head>
{% block body %}

	<h1 class="text-center mb-3">Réinitialisez votre mot de passe</h1>
	<div class="container  py-2 h-100">
		<div class="row justify-content-center align-items-center h-100">
			<div class="card  shadow-2-strong  text-center" style="border-radius: 15px; width:32rem">
				<div class="card-body p-3 p-md-5">
					{{ form_start(resetForm) }}
					{{ form_row(resetForm.plainPassword) }}
					<div>
						<small class="text-danger">
							Les deux mots de passe doivent correspondre et doivent comporter au moins 6 caractères
						</small>
					</div>
					<button class="btn btn-primary  mb-5 mt-5">
						<span class="text-white">Réinitialisez</span>
					</button>
					{{ form_end(resetForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
