<!-- Contact Form Section Begin -->
<section class="contact-form-section spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="cf-content">
					<div class="cc-title">
						<h4>Modifier profile</h4>
					</div>
					{{form_start(form)}}
					<div class="row g-3">
						<div class="col-md-6">
							{{form_row(form.nom)}}
						</div>
						<div class="col-md-6">
							{{form_row(form.prenom)}}
						</div>
						<div class="col-md-6">
							{{form_row(form.email)}}
						</div>
						<div class="col-md-6">
							{{form_row(form.numeroTelephone)}}
						</div>
					</div>
					<div class="col-12 mt-4">
						{{form_rest(form)}}
					</div>
					<div class="col-12 mt-4">
						<input type="submit" class="btn btn-dark" value="{{valeurBtnSubmit|default("Envoyer")}}" formnovalidate>
					</div>
				</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
</section>
<!-- Contact Form Section End -->
